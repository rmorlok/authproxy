{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/rmorlok/authproxy/refs/heads/main/config/connectors/schema.json",
  "$defs": {
    "OAuth": {
      "properties": {
        "initiate_to_redirect_ttl": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "round_trip_ttl": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "refresh_tokens_in_background": {
          "type": "boolean"
        },
        "refresh_tokens_time_before_expiry": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "refresh_tokens_cron_schedule": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Probe": {
      "required": ["id", "period"],
      "properties": {
        "id": {
          "type": "string"
        },
        "period": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "proxy_http": {
          "$ref": "#/$defs/ProbeHttp"
        },
        "http": {
          "$ref": "#/$defs/ProbeHttp"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ProbeHttp": {
      "required": ["method", "url"],
      "properties": {
        "method": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "header": {
          "type": "object"
        },
        "body_raw": {
          "type": "string"
        },
        "body_json": {
          "type": "object"
        },
        "body": {
          "type": "string"
        },
        "timeout": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        }
      }
    }
  },
  "properties": {
    "id": {
      "$ref": "../common/schema.json#/$defs/UUID"
    },
    "type": {
      "type": "string"
    },
    "version": {
      "type": "integer"
    },
    "state": {
      "type": "string"
    },
    "display_name": {
      "type": "string"
    },
    "logo": {
      "$ref": "../common/schema.json#/$defs/Image"
    },
    "highlight": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "auth": {
      "type": "object"
    },
    "probes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Probe"
      }
    }
  },
  "additionalProperties": false,
  "type": "object"
}