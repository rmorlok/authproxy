{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/rmorlok/authproxy/refs/heads/main/config/connectors/schema.json",
  "$defs": {
    "OAuth": {
      "properties": {
        "initiate_to_redirect_ttl": {
          "$ref": "../common/schema.json#$defs/HumanDuration"
        },
        "round_trip_ttl": {
          "$ref": "../common/schema.json#$defs/HumanDuration"
        },
        "refresh_tokens_in_background": {
          "type": "boolean"
        },
        "refresh_tokens_time_before_expiry": {
          "$ref": "../common/schema.json#$defs/HumanDuration"
        },
        "refresh_tokens_cron_schedule": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  },
  "properties": {
    "id": {
      "$ref": "../common/schema.json#/$defs/UUID"
    },
    "type": {
      "type": "string"
    },
    "version": {
      "type": "integer"
    },
    "state": {
      "type": "string"
    },
    "display_name": {
      "type": "string"
    },
    "logo": true,
    "highlight": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "auth": true
  },
  "additionalProperties": false,
  "type": "object"
}