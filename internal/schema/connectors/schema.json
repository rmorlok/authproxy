{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/rmorlok/authproxy/refs/heads/main/schema/connectors/schema.json",
  "$defs": {
    "AuthApiKey": {
      "properties": {
        "type": {
          "const": "api-key"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "AuthNoAuth": {
      "properties": {
        "type": {
          "const": "no-auth"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Probe": {
      "oneOf": [
        {
          "required": ["id", "http"]
        },
        {
          "required": ["id", "proxy_http"]
        }
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "period": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "cron": {
          "$ref": "../common/schema.json#/$defs/Cron"
        },
        "proxy_http": {
          "$ref": "#/$defs/ProbeHttp"
        },
        "http": {
          "$ref": "#/$defs/ProbeHttp"
        }
      },
      "dependencies": {
        "period": {
          "not": { "required": ["cron"] }
        },
        "cron": {
          "not": { "required": ["period"] }
        },
        "proxy_http": {
          "not": { "required": ["http"] }
        },
        "http": {
          "not": { "required": ["proxy_http"] }
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ProbeHttp": {
      "required": ["method", "url"],
      "properties": {
        "method": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "header": {
          "type": "object"
        },
        "body_raw": {
          "type": "string"
        },
        "body_json": {
          "type": "object"
        },
        "body": {
          "type": "string"
        },
        "timeout": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        }
      }
    }
  },
  "properties": {
    "id": {
      "$ref": "../common/schema.json#/$defs/UUID"
    },
    "namespace": {
      "$ref": "../common/schema.json#/$defs/NamespacePath"
    },
    "type": {
      "type": "string"
    },
    "version": {
      "type": "integer"
    },
    "state": {
      "type": "string"
    },
    "display_name": {
      "type": "string"
    },
    "logo": {
      "$ref": "../common/schema.json#/$defs/Image"
    },
    "highlight": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "auth": {
      "oneOf": [
        { "$ref": "./schema-oauth.json" },
        { "$ref": "#/$defs/AuthApiKey" },
        { "$ref": "#/$defs/AuthNoAuth" }
      ]
    },
    "probes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Probe"
      }
    }
  },
  "required": ["type", "display_name", "logo", "auth"],
  "additionalProperties": false,
  "type": "object"
}