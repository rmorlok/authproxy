{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/rmorlok/authproxy/refs/heads/main/schema/config/schema.json",
  "$defs": {
    "AdminUser": {
      "type": "object",
      "properties": {
        "username": { "type": "string" },
        "email": { "type": "string" },
        "key": { "$ref": "#/$defs/Key" },
        "permissions": {
          "type": "array",
          "items": { "$ref": "../auth/schema.json#/$defs/Permission" }
        }
      },
      "required": ["username", "key"],
      "additionalProperties": false
    },
    "AdminUsers": {
      "oneOf": [
        {
          "type": "array",
          "items": { "$ref": "#/$defs/AdminUser" }
        },
        {
          "type": "object",
          "properties": {
            "keys_path": { "type": "string" },
            "permissions": {
              "type": "array",
              "items": { "$ref": "../auth/schema.json#/$defs/Permission" }
            },
            "sync_cron_schedule": { "type": "string" }
          },
          "required": ["keys_path"],
          "additionalProperties": false
        }
      ]
    },
    "Connectors": {
      "properties": {
        "auto_migrate": {
          "type": "boolean"
        },
        "auto_migration_lock_duration": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "load_from_list": {
          "items": {
            "$ref": "../connectors/schema.json"
          },
          "type": "array"
        },
        "identifying_labels": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "CookieConfig": {
      "properties": {
        "domain": {
          "type": "string"
        },
        "same_site": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "CorsConfig": {
      "properties": {
        "allowed_origins": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "allowed_methods": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "allowed_headers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "exposed_headers": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "max_age": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "allow_credentials": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "DatabaseSqlite": {
      "type": "object",
      "properties": {
        "provider": { "const": "sqlite" },
        "path": { "type": "string" },
        "auto_migrate": { "type": "boolean" },
        "auto_migration_lock_duration": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        }
      },
      "required": ["provider", "path"],
      "additionalProperties": false
    },
    "DatabasePostgres": {
      "type": "object",
      "properties": {
        "provider": {
          "const": "postgres"
        },
        "host": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "port": {
          "$ref": "../common/schema.json#/$defs/IntegerValue"
        },
        "user": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "password": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "database": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "sslmode": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "params": {
          "type": "object",
          "properties": {
            "attributes": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        },
        "auto_migrate": {
          "type": "boolean"
        },
        "auto_migration_lock_duration": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        }
      },
      "required": ["provider", "host"],
      "additionalProperties": false
    },
    "DatabaseClickhouse": {
      "type": "object",
      "properties": {
        "provider": {
          "const": "clickhouse"
        },
        "addresses": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "address": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "address_list": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "user": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "password": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "database": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "auto_migrate": {
          "type": "boolean"
        },
        "auto_migration_lock_duration": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        }
      },
      "oneOf": [
        { "required": ["provider", "addresses"], "not": { "required": ["address", "address_list"] } },
        { "required": ["provider", "address"], "not": { "required": ["addresses","address_list"] } },
        { "required": ["provider", "address_list"], "not": { "required": ["addresses", "address"] } }
      ],
      "additionalProperties": false
    },
    "Database": {
      "oneOf": [
        { "$ref": "#/$defs/DatabaseSqlite" },
        { "$ref": "#/$defs/DatabasePostgres" }
      ]
    },
    "DatabaseOrWarehouse": {
      "oneOf": [
        { "$ref": "#/$defs/DatabaseSqlite" },
        { "$ref": "#/$defs/DatabasePostgres" },
        { "$ref": "#/$defs/DatabaseClickhouse" }
      ]
    },
    "DevSettings": {
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "fake_encryption": {
          "type": "boolean"
        },
        "fake_encryption_skip_base64": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ErrorPages": {
      "properties": {
        "not_found": {
          "type": "string"
        },
        "unauthorized": {
          "type": "string"
        },
        "internal_error": {
          "type": "string"
        },
        "template": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "HostApplication": {
      "properties": {
        "initiate_session_url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "HttpLogging": {
      "properties": {
        "auto_migrate": {
          "type": "boolean"
        },
        "retention": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "max_request_size": {
          "$ref": "../common/schema.json#/$defs/HumanByteSize"
        },
        "max_response_size": {
          "$ref": "../common/schema.json#/$defs/HumanByteSize"
        },
        "max_response_wait": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "full_request_recording": {
          "type": "string"
        },
        "full_request_retention": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "flush_interval": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "flush_batch_size": {
          "type": "integer"
        },
        "database": {
          "$ref": "#/$defs/DatabaseOrWarehouse"
        },
        "blob_storage": {
          "$ref": "#/$defs/BlobStorage"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "LoggingConfigNone": {
      "type": "object",
      "properties": {
        "type": { "const": "none" }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "LoggingConfigText": {
      "type": "object",
      "properties": {
        "type": { "const": "text" },
        "to": { "type": "string" },
        "level": { "type": "string" },
        "source": { "type": "boolean" }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "LoggingConfigJson": {
      "type": "object",
      "properties": {
        "type": { "const": "json" },
        "to": { "type": "string" },
        "level": { "type": "string" },
        "source": { "type": "boolean" }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "LoggingConfigTint": {
      "type": "object",
      "properties": {
        "type": { "const": "tint" },
        "to": { "type": "string" },
        "level": { "type": "string" },
        "source": { "type": "boolean" },
        "no_color": { "type": "boolean" },
        "time_format": { "type": "string" }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "LoggingConfig": {
      "oneOf": [
        { "$ref": "#/$defs/LoggingConfigNone" },
        { "$ref": "#/$defs/LoggingConfigText" },
        { "$ref": "#/$defs/LoggingConfigJson" },
        { "$ref": "#/$defs/LoggingConfigTint" }
      ]
    },
    "Marketplace": {
      "properties": {
        "base_url": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "OAuth": {
      "properties": {
        "initiate_to_redirect_ttl": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "round_trip_ttl": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "refresh_tokens_in_background": {
          "type": "boolean"
        },
        "refresh_tokens_time_before_expiry": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "refresh_tokens_cron_schedule": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Tasks": {
      "properties": {
        "default_retention": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "RedisReal": {
      "type": "object",
      "properties": {
        "provider": { "const": "redis" },
        "network": { "type": "string" },
        "address": { "type": "string" },
        "protocol": { "type": "integer" },
        "username": { "$ref": "../common/schema.json#/$defs/StringValue" },
        "password": { "$ref": "../common/schema.json#/$defs/StringValue" },
        "db": { "type": "integer" }
      },
      "required": ["address"],
      "additionalProperties": false
    },
    "RedisMiniredis": {
      "type": "object",
      "properties": {
        "provider": { "const": "miniredis" }
      },
      "required": ["provider"],
      "additionalProperties": false
    },
    "Redis": {
      "oneOf": [
        { "$ref": "#/$defs/RedisReal" },
        { "$ref": "#/$defs/RedisMiniredis" }
      ]
    },
    "AwsCredentialsAccessKey": {
      "type": "object",
      "properties": {
        "type": { "const": "access_key" },
        "access_key_id": { "$ref": "../common/schema.json#/$defs/StringValue" },
        "secret_access_key": { "$ref": "../common/schema.json#/$defs/StringValue" }
      },
      "required": ["type", "access_key_id", "secret_access_key"],
      "additionalProperties": false
    },
    "AwsCredentialsImplicit": {
      "type": "object",
      "properties": {
        "type": { "const": "implicit" }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "AwsCredentials": {
      "oneOf": [
        { "$ref": "#/$defs/AwsCredentialsAccessKey" },
        { "$ref": "#/$defs/AwsCredentialsImplicit" }
      ]
    },
    "BlobStorageS3": {
      "type": "object",
      "properties": {
        "provider": { "const": "s3" },
        "endpoint": { "type": "string" },
        "region": { "type": "string" },
        "bucket": { "type": "string" },
        "credentials": { "$ref": "#/$defs/AwsCredentials" },
        "force_path_style": { "type": "boolean" },
        "prefix": { "type": "string" }
      },
      "required": ["bucket"],
      "additionalProperties": false
    },
    "BlobStorageMemory": {
      "type": "object",
      "properties": {
        "provider": { "const": "memory" }
      },
      "required": ["provider"],
      "additionalProperties": false
    },
    "BlobStorage": {
      "oneOf": [
        { "$ref": "#/$defs/BlobStorageS3" },
        { "$ref": "#/$defs/BlobStorageMemory" }
      ]
    },
    "ServiceAdminApi": {
      "properties": {
        "health_check_port": {
          "$ref": "../common/schema.json#/$defs/IntegerValue"
        },
        "port": {
          "$ref": "../common/schema.json#/$defs/IntegerValue"
        },
        "domain": {
          "type": "string"
        },
        "https": {
          "type": "boolean"
        },
        "cors": {
          "$ref": "#/$defs/CorsConfig"
        },
        "tls": {
          "$ref": "#/$defs/TlsConfig"
        },
        "ui": {
          "$ref": "#/$defs/ServiceAdminUi"
        },
        "session_timeout": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "xsrf_request_queue_depth": {
          "type": "integer"
        },
        "static": {
          "$ref": "#/$defs/ServicePublicStaticContentConfig"
        },
        "cookie": {
          "$ref": "#/$defs/CookieConfig"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ServiceAdminUi": {
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "base_url": {
          "$ref": "../common/schema.json#/$defs/StringValue"
        },
        "initiate_session_url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ServiceApi": {
      "properties": {
        "health_check_port": {
          "$ref": "../common/schema.json#/$defs/IntegerValue"
        },
        "port": {
          "$ref": "../common/schema.json#/$defs/IntegerValue"
        },
        "domain": {
          "type": "string"
        },
        "https": {
          "type": "boolean"
        },
        "cors": {
          "$ref": "#/$defs/CorsConfig"
        },
        "tls": {
          "$ref": "#/$defs/TlsConfig"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ServicePublic": {
      "properties": {
        "health_check_port": {
          "$ref": "../common/schema.json#/$defs/IntegerValue"
        },
        "port": {
          "$ref": "../common/schema.json#/$defs/IntegerValue"
        },
        "domain": {
          "type": "string"
        },
        "https": {
          "type": "boolean"
        },
        "cors": {
          "$ref": "#/$defs/CorsConfig"
        },
        "tls": {
          "$ref": "#/$defs/TlsConfig"
        },
        "session_timeout": {
          "$ref": "../common/schema.json#/$defs/HumanDuration"
        },
        "xsrf_request_queue_depth": {
          "type": "integer"
        },
        "enable_marketplace_apis": {
          "type": "boolean"
        },
        "enable_proxy": {
          "type": "boolean"
        },
        "static": {
          "$ref": "#/$defs/ServicePublicStaticContentConfig"
        },
        "cookie": {
          "$ref": "#/$defs/CookieConfig"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ServicePublicStaticContentConfig": {
      "properties": {
        "mount_at": {
          "type": "string"
        },
        "serve_from": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "ServiceWorker": {
      "properties": {
        "health_check_port": {
          "$ref": "../common/schema.json#/$defs/IntegerValue",
          "description": "The port on which the worker will listen for health checks."
        },
        "concurrency": {
          "$ref": "../common/schema.json#/$defs/StringValue",
          "description": "The number of concurrent tasks that a single instance of the worker will run. If not set, the default is 0, which means that the worker will use the number of CPUs to be the maximum number of parallel tasks."
        },
        "cron_sync_interval": {
          "$ref": "../common/schema.json#/$defs/HumanDuration",
          "description": "The interval at which the the system will sync the list of cron tasks. Cron tasks are both global and connection specific. If not set, the default is every 5 minutes."
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "SystemAuth": {
      "properties": {
        "jwt_signing_key": { "$ref": "#/$defs/Key" },
        "jwt_issuer": {
          "type": "string"
        },
        "jwt_token_duration": {
          "type": "integer"
        },
        "disable_xsrf": {
          "type": "boolean"
        },
        "actors": { "$ref": "#/$defs/ConfiguredActors" },
        "global_aes_key": { "$ref": "#/$defs/KeyData" }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Key": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "public_key": { "$ref": "#/$defs/KeyData" },
            "private_key": { "$ref": "#/$defs/KeyData" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "shared_key": { "$ref": "#/$defs/KeyData" }
          },
          "required": ["shared_key"],
          "additionalProperties": false
        }
      ]
    },
    "KeyData": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "value": { "type": "string" }
          },
          "required": ["value"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "base64": { "type": "string" }
          },
          "required": ["base64"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "env_var": { "type": "string" }
          },
          "required": ["env_var"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "env_var_base64": { "type": "string" }
          },
          "required": ["env_var_base64"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "path": { "type": "string" }
          },
          "required": ["path"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "num_bytes": { "type": "integer" }
          },
          "required": ["num_bytes"],
          "additionalProperties": false
        }
      ]
    },
    "TlsConfig": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "cert": { "$ref": "#/$defs/KeyData" },
            "key": { "$ref": "#/$defs/KeyData" }
          },
          "required": ["cert", "key"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "accept_tos": { "type": "boolean" },
            "cache_dir": { "type": "string" },
            "email": { "type": "string" },
            "host_whitelist": {
              "type": "array",
              "items": { "type": "string" }
            },
            "renew_before": {
              "$ref": "../common/schema.json#/$defs/HumanDuration"
            }
          },
          "required": ["accept_tos"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "auto_gen_path": { "type": "string" }
          },
          "required": ["auto_gen_path"],
          "additionalProperties": false
        }
      ]
    },
    "ConfiguredActor": {
      "type": "object",
      "properties": {
        "external_id": { "type": "string" },
        "key": { "$ref": "#/$defs/Key" },
        "permissions": {
          "type": "array",
          "items": { "$ref": "../auth/schema.json#/$defs/Permission" }
        },
        "labels": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "required": ["external_id", "key"]
    },
    "ConfiguredActors": {
      "oneOf": [
        {
          "type": "array",
          "items": { "$ref": "#/$defs/ConfiguredActor" }
        },
        {
          "type": "object",
          "properties": {
            "keys_path": { "type": "string" },
            "permissions": {
              "type": "array",
              "items": { "$ref": "../auth/schema.json#/$defs/Permission" }
            },
            "sync_cron_schedule": { "type": "string" }
          },
          "required": ["keys_path"],
          "additionalProperties": false
        }
      ]
    }
  },
  "properties": {
    "admin_api": {
      "$ref": "#/$defs/ServiceAdminApi"
    },
    "api": {
      "$ref": "#/$defs/ServiceApi"
    },
    "public": {
      "$ref": "#/$defs/ServicePublic"
    },
    "worker": {
      "$ref": "#/$defs/ServiceWorker"
    },
    "marketplace": {
      "$ref": "#/$defs/Marketplace"
    },
    "host_application": {
      "$ref": "#/$defs/HostApplication"
    },
    "system_auth": {
      "$ref": "#/$defs/SystemAuth"
    },
    "database": {
      "$ref": "#/$defs/Database"
    },
    "logging": {
      "$ref": "#/$defs/LoggingConfig"
    },
    "redis": {
      "$ref": "#/$defs/Redis"
    },
    "oauth": {
      "$ref": "#/$defs/OAuth"
    },
    "error_pages": {
      "$ref": "#/$defs/ErrorPages"
    },
    "connectors": {
      "$ref": "#/$defs/Connectors"
    },
    "http_logging": {
      "$ref": "#/$defs/HttpLogging"
    },
    "tasks": {
      "$ref": "#/$defs/Tasks"
    },
    "dev_settings": {
      "$ref": "#/$defs/DevSettings"
    }
  },
  "additionalProperties": false,
  "type": "object"
}
